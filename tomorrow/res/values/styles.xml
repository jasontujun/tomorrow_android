<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tomorrow自定义的Theme样式(含ActionBar和Tab样式) -->
    <style name="TomorrowTheme" parent="android:style/Theme.Holo">
        <item name="android:selectableItemBackground">@drawable/bg_action_bar_item</item>
        <item name="android:actionBarStyle">@style/TomorrowActionBar</item>
        <item name="android:actionBarTabStyle">@style/TomorrowTabStyle</item>
        <item name="android:actionBarTabTextStyle">@style/TomorrowTabTextStyle</item>
    </style>
    <!-- Tomorrow自定义的ActionBar样式 -->
    <style name="TomorrowActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/TomorrowTitleStyle</item>
        <item name="android:subtitleTextStyle">@style/TomorrowSubTitleStyle</item>
        <item name="android:background">@color/light_black</item>
    </style>
    <style name="TomorrowTitleStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="TomorrowSubTitleStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/gray</item>
    </style>
    <!-- Tomorrow自定义的Tab样式 -->
    <style name="TomorrowTabStyle" parent="android:Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/bg_action_bar_tab</item>
    </style>
    <style name="TomorrowTabTextStyle"  parent="android:Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="listview" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollingCache">false</item>
    </style>

</resources>